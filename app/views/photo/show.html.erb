

<div >
<% @posts.each do |p|%>

<div class="row " style="background:#22313F; margin-top:2%; color:white" >
  <div class="large-1 columns" >
    <ul class="side-nav">

          <%if @signin %>
          <p align="center" style="background:#22A7F0; padding:5px"><%= p.votes_for.size%> <br>People <br>Like!</p>
    <% if @voted.include?(p) %>
    <li><%= link_to '', dislike_path(p), :style=>"color: red", :class=>"fi-dislike",:align=>"center" %></li>
    <% else%>
    <li><%= link_to '', like_path(p), :style=>"color: blue", :class=>"fi-like",:align=>"center"  %></li>
    <% end%>
    
    <% end%>
    </ul>
  </div>


  <div class="large-7 columns" style="padding:0px">
  <%= image_tag p.photo%>
  </div>

  <div class="large-4 columns " > 
      <fieldset>
    <legend>
      <h5>Description</h5>
    </legend>
    <p ><%= simple_format(p.description) %></p>
    </fieldset>
  
  <div style="padding:10px;">
          <fieldset>
    <legend>
      <h5 >Post By</h5>
    </legend>
    <p><%= image_tag  @users.find_by(email: p.email).avatar, :width=>"50" %> <%= p.email %>
    </p>
    
  </fieldset>
  
  </div>

</div>
  	

<% end%>
</div>
<div class="row">
<div class="apple_pagination " align="center" >
    <%= will_paginate @posts %>
  </div>
</div>

</div>
<br>
