

<div >
<% @posts.each do |p|%>

<p align="left"><%= p.created_at %></p>
<div class="row " style="background:#2980b9; " >
  <div class="large-2 columns" >
    <ul class="side-nav">

          <%if @signin %>
    <% if @voted.include?(p) %>
    <li><%= link_to ' Dislike', dislike_path(p), :style=>"color: red", :class=>"fi-minus" %></li>
    <% else%>
    <li><%= link_to ' Like', like_path(p), :style=>"color: #3498db", :class=>"fi-plus"  %></li>
    <% end%>
    <p>Score <%= p.votes_for.size%></p>
    <% end%>
    </ul>
  </div>
  <div class="large-6 columns">

  <%= image_tag p.photo, :style=>"padding:13px; background:#3498db;"%>

  </div>
  <div class="large-4 columns " > 
      <fieldset>
    <legend>
      <h5>Description</h5>
    </legend>
    <p ><%= simple_format(p.description) %></p>
    </fieldset>
  
  <div style="padding:10px;">
          <fieldset>
    <legend>
      <h5>Post By</h5>
    </legend>
    <p><%= image_tag  @users.find_by(email: p.email).avatar, :width=>"50" %> <%= p.email %></p>
  </fieldset>
  </div>

</div>
  	





<% end%>
</div>
<br>
<div class="flickr_pagination" >
    <%= will_paginate @posts %>
  </div>

