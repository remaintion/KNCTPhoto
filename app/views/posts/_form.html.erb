    <%= f.label :description %><br>
    <%= f.text_area :description, :rows=>"5" %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :value=>current_user.email, :readonly=>true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
