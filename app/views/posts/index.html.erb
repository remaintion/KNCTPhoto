<h1>Listing posts</h1>
<div class="large-8 small-centered columns">
<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Path</th>
      <th>Description</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.photo %></td>
        <td><%= post.photo %></td>
        <td><%= post.description %></td>
        <td><%= post.email %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>